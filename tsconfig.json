{
  "compilerOptions": {
    "lib": ["ES2019", "ES2020", "ES2021"],
    "target": "ES2018",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": ".",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
